{
  "name": "gh-repo.action",
  "version": "0.0.0-development",
  "description": "",
  "main": "./lib/main.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "build": "tsc",
    "clean": "rm -rf dist && rm -rf lib",
    "lint": "eslint */**/*.ts --quiet --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "cm": "cz",
    "package": "ncc build --external bin --source-map --license licenses.txt",
    "all": "npm run clean && npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luciandavies/gh-repo.action.git"
  },
  "license": "MIT",
  "author": {
    "name": "Tonderai Lucian Davies Khatai",
    "email": "luciandavies@users.noreply.github.com",
    "url": "https://github.com/luciandavies"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "bugs": {
    "url": "https://github.com/luciandavies/typescript-npm-package-template/issues"
  },
  "homepage": "https://github.com/luciandavies/gh-repo.action#readme",
  "dependencies": {
    "@actions/core": "^1.5.0",
    "@actions/github": "^5.0.0",
    "@actions/http-client": "^1.0.11",
    "axios": "^0.24.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vercel/ncc": "^0.30.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "jest-circus": "^27.1.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^10.5.4",
    "prettier": "2.3.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main",
      "next"
    ]
  }
}
